<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.photo_detail.FileDetailFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            android:id="@+id/app_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:title="@string/info"
                app:titleTextColor="@color/text_light"
                app:subtitleTextColor="@color/text_light"
                app:navigationIcon="@drawable/ic_arrow_back"
                />

        </com.google.android.material.appbar.AppBarLayout>
        <TextView
            android:id="@+id/txt_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_layout"
            android:layout_marginTop="@dimen/space_screen_small"
            android:layout_marginStart="@dimen/space_screen_small"
            android:text="@string/details"
            android:textColor="@color/grey_700"
            android:textSize="@dimen/text_size_14"
            android:textAllCaps="true"
            android:fontFamily="@font/inter_medium_500"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imv_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_screen_small"
            android:src="@drawable/ic_folder"
            android:tint="@color/grey_700"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@id/txt_detail"
            app:layout_constraintTop_toTopOf="@+id/linearLayout" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_screen_small"
            android:layout_marginTop="@dimen/space_screen_small"
            android:layout_marginEnd="@dimen/space_screen_small"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imv_folder"
            app:layout_constraintTop_toBottomOf="@id/txt_detail">
            <TextView
                android:id="@+id/txt_folder_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium_500"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_16"/>
            <TextView
                android:id="@+id/txt_folder_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium_500"
                android:textColor="@color/grey_700"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/grey_700"
            android:layout_marginTop="@dimen/space_screen_small"
            android:src="@drawable/ic_calendar_today"
            app:layout_constraintBottom_toBottomOf="@+id/ll_date"
            app:layout_constraintStart_toStartOf="@id/txt_detail"
            app:layout_constraintTop_toTopOf="@+id/ll_date" />

        <LinearLayout
            android:id="@+id/ll_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_screen_small"
            android:layout_marginTop="@dimen/space_screen_large"
            android:layout_marginEnd="@dimen/space_screen_small"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imv_date"
            app:layout_constraintTop_toBottomOf="@id/linearLayout">
            <TextView
                android:id="@+id/txt_date_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium_500"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_16"/>
            <TextView
                android:id="@+id/txt_date_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium_500"
                android:textColor="@color/grey_700"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_screen_small"
            android:src="@drawable/ic_photos"
            app:tint="@color/grey_700"
            app:layout_constraintBottom_toBottomOf="@+id/ll_name"
            app:layout_constraintStart_toStartOf="@id/txt_detail"
            app:layout_constraintTop_toTopOf="@+id/ll_name" />

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_screen_small"
            android:layout_marginTop="@dimen/space_screen_large"
            android:layout_marginEnd="@dimen/space_screen_small"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imv_date"
            app:layout_constraintTop_toBottomOf="@id/ll_date">
            <TextView
                android:id="@+id/txt_name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium_500"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_16"/>
            <TextView
                android:id="@+id/txt_name_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium_500"
                android:textColor="@color/grey_700"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>